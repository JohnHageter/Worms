from typing import List, Any, Literal

AcquisitionStopMode_Default: int
INFINITE_NUMBER: int

class Node:
    def Value(self) -> float: ...
    def SetValue(self, value: float) -> None: ...
    def Maximum(self) -> float: ...
    def Minimum(self) -> float: ...
    def Execute(self) -> None: ...

class NodeMap:
    def FindNode(self, name: str) -> Node: ...

class RemoteDevice:
    def NodeMaps(self) -> List[NodeMap]: ...

class DataStreamBuffer:
    def PixelFormat(self) -> Any: ...
    def BasePtr(self) -> Any: ...
    def Size(self) -> int: ...
    def Width(self) -> int: ...
    def Height(self) -> int: ...

class DataStream:
    INFINITE_NUMBER: int
    def StartAcquisition(self, stop_mode: int, count: int) -> None: ...
    def StopAcquisition(self, stop_mode: int) -> None: ...
    def WaitForFinishedBuffer(
        self, timeout_ms: int | Literal["Infinite"]
    ) -> DataStreamBuffer: ...
    def QueueBuffer(self, buffer: DataStreamBuffer) -> None: ...
    def NumBuffersAnnouncedMinRequired(self) -> int: ...
    def AllocAndAnnounceBuffer(self, payload_size: float) -> DataStreamBuffer: ...

class DataStreamDescriptor:
    def OpenDataStream(self) -> "DataStream": ...

class Device:
    def RemoteDevice(self) -> RemoteDevice: ...
    def DataStreams(self) -> list["DataStreamDescriptor"]: ...

class DeviceDescriptor:
    def OpenDevice(self, access_type: Any) -> Device: ...
    def OpenDataStream(self) -> "DataStream": ...

class DeviceList(List[DeviceDescriptor]):
    def empty(self) -> bool: ...

class DeviceManager:
    @staticmethod
    def Instance() -> "DeviceManager": ...
    def Update(self) -> None: ...
    def Devices(self) -> DeviceList: ...

class Library:
    @staticmethod
    def Initialize() -> None: ...
    @staticmethod
    def Close() -> None: ...

DeviceAccessType_Control: Any
